<Context reloadable="true">
	<!-- H2 Database -->
	<Resource
		name="jdbc/book"
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="org.h2.Driver"
		url="jdbc:h2:tcp://localhost/~/book"
		username="sa"
		password=""
	/>
	
	<!-- MySQL -->
	<Resource
        auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        name="jdbc/test"
        username="root"
        password="root"
        type="javax.sql.DataSource"
        url="jdbc:mysql://localhost/test" />
         
</Context>

